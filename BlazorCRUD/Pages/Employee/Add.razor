@page "/Employee/Add"
@using BlazorCRUD.Data
@inject EmployeeService employeeService
@inject NavigationManager navigationManager

<h3>AddEmployee</h3>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input type="text" name="Name" class="form-control" @bind="@emp.Name" />
            </div>
            <div class="form-group">
                <label for="Gender" class="control-label">Gender</label>
                <select @bind="@emp.Gender" class="from-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Country" class="control-label">Country</label>
                <input type="text" name="Country" class="form-control" @bind="@emp.Country" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">City</label>
                <input type="text" name="City" class="form-control" @bind="@emp.City" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    EmployeeInfo emp = new EmployeeInfo();

    private void CreateEmployee()
    {
        employeeService.CreateEmployee(emp);
        navigationManager.NavigateTo("Employee");
    }

    private void Cancel()
    {
        navigationManager.NavigateTo("Employee");
    }
}
